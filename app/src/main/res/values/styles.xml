<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->

    <style name="boton">
        <item name="android:height">@dimen/boton_height</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="android:color">@color/white</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/fontZ_button</item>
        <item name="android:layout_marginLeft">@dimen/btnMargin</item>
        <item name="android:layout_marginRight">@dimen/btnMargin</item>

    </style>

    <style name="edittext">

        <item name="maxLines">1</item>
        <item name="android:textColorHighlight">@color/colorSecondary</item>
        <item name="android:textColorLink">@color/colorSecondary</item>
        <item name="android:textSize">@dimen/txt_inputs</item>
        <item name="android:layout_marginLeft">@dimen/margin_txt_input</item>
        <item name="android:layout_marginRight">@dimen/margin_txt_input</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textCursorDrawable">@color/colorSecondary</item>


    </style>

    <style name="ImageView">
        <item name="android:height">@dimen/img_height</item>
        <item name="android:width">@dimen/img_width</item>

    </style>

    <style name="lblTitulo">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="toolbar" parent="ThemeOverlay.AppCompat.ActionBar">

        <item name="colorControlNormal">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="backgroundColor">@color/colorPrimary</item>
    </style>

    <style name="btnAtras">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="srcCompat">@drawable/ic_backbutton</item>




    </style>
</resources>