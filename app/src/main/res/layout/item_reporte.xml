<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_reporte_cardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_Reporte_heigth"
        android:layout_margin="5dp"
        android:backgroundTint="@color/grisclaro">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_reporte_imgAlumnoReportado"
                android:layout_width="@dimen/itemReporte_img_width"
                android:layout_height="@dimen/itemReporte_img_heigth"
                android:layout_margin="5dp"

                android:background="@drawable/roundedbuttonoutline"
                app:srcCompat="@drawable/ic_primary"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_reporte_lblIdAlumnoReportado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Alumno Reportado"
                    android:textSize="@dimen/itemReporte_txtZize" />

                <TextView
                    android:id="@+id/item_reporte_lblStatusReporte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/itemReporte_txtMargin"
                    android:text="Estatus Reporte"
                    android:textSize="@dimen/itemReporte_txtZize" />

                <TextView
                    android:id="@+id/item_reporte_lblFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/itemReporte_txtMargin"
                    android:text="@string/lbl_fecha_reporte"
                    android:textSize="21sp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>